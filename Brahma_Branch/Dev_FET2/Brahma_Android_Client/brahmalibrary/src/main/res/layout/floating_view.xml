<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <brahma.vmi.brahmalibrary.expandmenu.widget.HorizontalExpandMenu
        android:id="@+id/fab"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:button_style="left">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:focusable="true">

            <Button
                android:id="@+id/menu_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@mipmap/menu_ftb"
                android:layout_margin="3dp"
                android:gravity="center" />

            <Button
                android:id="@+id/back_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@mipmap/back_ftb"
                android:layout_margin="3dp"
                android:gravity="center" />

            <Button
                android:id="@+id/home_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@mipmap/home_ftb"
                android:layout_margin="3dp"
                android:gravity="center" />

            <Button
                android:id="@+id/multiapp_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@mipmap/mulitapp_ftb"
                android:layout_margin="3dp"
                android:gravity="center" />
        </LinearLayout>
    </brahma.vmi.brahmalibrary.expandmenu.widget.HorizontalExpandMenu>
</RelativeLayout>